<!doctype html>
<html lang="">
<head>
    <meta charset="utf-8" />
    <link rel="dns-prefetch" href="https://ajax.googleapis.com">
    <link rel="dns-prefetch" href="https://cdn.jsdelivr.net">
    <link rel="dns-prefetch" href="https://cdnjs.cloudflare.com">
    <link rel="dns-prefetch" href="https://fonts.googleapis.com">
    <link rel="dns-prefetch" href="https://maxcdn.bootstrapcdn.com">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DnxWebA</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.2.3/css/bulma.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
</head>
<body>
        <header class="header">
          <nav class="nav">
            <div class="left-nav">
              <span>DnxWebA</span>
             </div>
          <div class="nav-right nav-menu">
            <a asp-controller="Home" asp-action="Index" class="nav-item"><span class="icon"><i class="fa fa-home"></i></span>Home</a>
            <a asp-controller="Home" asp-action="Contact" class="nav-item"><span class="icon"><i class="fa fa-email"></i></span>Contact</a>
          </div>
          </nav>
          </header>
          

        <section class="section">
            <div class="container">
                @RenderBody()
            </div>
        </section>

        <div class="hero-foot">
            <div class="container">
                <div class="tabs is-centered"><p>Copyright &copy; @DateTime.Now.Year Madhon</p></div>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>