<!doctype html>
<html lang="">
<head>
    <meta charset="utf-8" />
    <link rel="dns-prefetch" href="https://ajax.googleapis.com">
    <link rel="dns-prefetch" href="https://cdn.jsdelivr.net">
    <link rel="dns-prefetch" href="https://code.getmdl.io">
    <link rel="dns-prefetch" href="https://fonts.googleapis.com">
    <link rel="dns-prefetch" href="https://maxcdn.bootstrapcdn.com">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MadDNX</title>
    <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-light_blue.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body>
    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
        <header class="mdl-layout__header">
            <div class="mdl-layout__header-row">
                <!-- Title -->
                <span class="mdl-layout-title">MadDNX</span>
                <!-- Add spacer, to align navigation to the right -->
                <div class="mdl-layout-spacer"></div>
                <!-- Navigation. We hide it in small screens. -->
                <nav class="mdl-navigation mdl-layout--large-screen-only">
                    <a asp-controller="Home" asp-action="Index" class="mdl-navigation__link"><localize>Home</localize></a>
                    <a asp-controller="Home" asp-action="Contact" class="mdl-navigation__link"><localize>Contact</localize></a>
                    <language-nav></language-nav>
</nav>
            </div>
        </header>

        <div class="mdl-layout__drawer">
            <span class="mdl-layout-title">MadDNX</span>
            <nav class="mdl-navigation">
                <a asp-controller="Home" asp-action="Index" class="mdl-navigation__link"><localize>Home</localize></a>
                <a asp-controller="Home" asp-action="Contact" class="mdl-navigation__link"><localize>Contact</localize></a>
                <language-nav></language-nav>
            </nav>
        </div>

        <main class="mdl-layout__content">
            <div class="page-content">
                @RenderBody()
            </div>
        </main>

        <footer class="mdl-mini-footer">
            <div class="mdl-mini-footer__left-section">
                <div class="mdl-logo">Copyright &copy; @DateTime.Now.Year Madhon</div>
            </div>
        </footer>
    </div>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://code.getmdl.io/1.3.0/material.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
