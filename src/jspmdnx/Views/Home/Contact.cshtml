@{
  ViewData["Title"] = "Contact";
}
    <form action="#" role="form" name="frmContact" data-parsley-validate>
      <label class="label">Your Name...</label>
      <p class="control">
        <input class="input" type="text" id="Name" autofocus required />
      </p>

      <label class="label">Your Email Address...</label>
      <p class="control">
        <input class="input" type="text" id="Email" data-parsley-trigger="change" required />
      </p>

      <label class="label">Your Message...</label>
      <p class="control">
        <textarea class="textarea" type="text" rows="3" id="Message" required></textarea>
      </p>

      <p class="control">
        <button class="button is-primary" type="submit">Submit</button>
        <button class="button" type="reset">Reset</button>
      </p>

    </form>

@section scripts {
    <script type="text/javascript" src="https://cdn.jsdelivr.net/parsleyjs/2.6.0/parsley.min.js"></script>
    <script src="/Content/js/contact.js"></script>
}
